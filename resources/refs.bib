	author = {Torres, Raquel C. and Campos, Ana M. and Goldman, Jacob and Barrote, Isabel and Mata, Leonardo and Silva, João},
	year = {2024},
	keywords = {Asparagopsis, Light, Photosynthesis, Asparagopsis taxiformis, Bromoforms, Rhodophyta, To Read},
