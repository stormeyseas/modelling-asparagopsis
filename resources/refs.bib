	author = {Oke, Peter R. and Sakov, Pavel and Cahill, Madeleine L. and Dunn, Jeff R. and Fiedler, Russell and Griffin, David A. and Mansbridge, Jim V. and Ridgway, Ken R. and Schiller, Andreas},
