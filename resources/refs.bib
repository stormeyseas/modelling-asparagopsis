	journal = {Applied Phycology},
	author = {Mihaila, Alisa A. and Glasson, Christopher R. K. and Lawton, Rebecca and Muetzel, Stefan and Molano, German and Magnusson, Marie},
	year = {2022},
	keywords = {Asparagopsis, greenhouse gas, in vitro, Methane, ruminant, seaweed},
	pages = {274--284},
	file = {Mihaila et al. 2022 - New temperate seaweed targets for mitigation of ru.pdf:C\:\\Users\\treimer\\OneDrive - University of Tasmania\\Zotero\\Mihaila et al. 2022 - New temperate seaweed targets for mitigation of ru.pdf:application/pdf},
