	author = {Mata, Leonardo and Silva, João and Schuenhoff, Andreas and Santos, Rui},
	year = {2006},
	keywords = {Asparagopsis, Asparagopsis armata, Fluorescence, Integrated aquaculture, Light, Photoinhibition, Photosynthesis, Polyculture, Temperature, Tetrasporophyte},
